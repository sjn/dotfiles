# Examples and ideas are stolen from several sources on github. Feel free
# to steal them yourself! :)
#
#
# vim:ts=2
[alias]
  ci        = commit
  st        = status
#  st        = status -sb
  co        = checkout
  br        = branch
  df        = diff
  prune-all = !git remote | xargs -n 1 git remote prune
  aliases   = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'
  lc        = log ORIG_HEAD.. --stat --no-merges
  changes   = diff --name-status -r
  diffstat  = diff --stat -r
  pull      = pull --ff-only
  whois     = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
  whatis    = show -s --pretty='tformat:%h (%s, %ad)' --date=short
  edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim `f`"
  add-unmerged  = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
  lg        = log -p
  who       = shortlog -s --
  lolr      = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cs) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lol       = log --graph --decorate --pretty=oneline --abbrev-commit
  lola      = log --graph --decorate --pretty=oneline --abbrev-commit --all
  lols      = log --graph --decorate --pretty=oneline --abbrev-commit --exclude=staging
  ours      = "!f() { git checkout --ours $@ && git add $@; }; f"
  theirs    = "!f() { git checkout --theirs $@ && git add $@; }; f"
  snapshot  = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
  standup   = !git log --since=yesterday --author `git config user.email` --pretty=short
  ignored   = ls-files --others -i --exclude-standard
  ready     = rebase -i @{u}
  stashed   = stash list --pretty=format:'%gd: %Cred%h%Creset %Cgreen[%ar]%Creset %s'
  cmp       = diff -b --word-diff=color --word-diff-regex='[[:alnum:]_]+|[^[:space:]]'
  staash    = stash --all
  blamed    = blame -C -C
  #branch-note = '!git config branch.$(git symbolic-ref HEAD|sed "s/refs\/heads\///").note $( if [ "$#" -gt 0Â ]; then $1; fi; )'

# Sources:
#   http://www.youtube.com/watch?v=Z2ZL14WWEJI
#   https://blog.gitbutler.com/how-git-core-devs-configure-git/
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = true

[core]
  autocrlf = input
  whitespace = fix,space-before-tab,tab-in-indent,trailing-space
#	excludesfile = ~/.gitignore

[credential]
# Requires compilation
	helper = /usr/share/doc/git/contrib/credential/libsecret/git-credential-libsecret

[push]
#  default = current
	default = simple
	autoSetupRemote = true
	followTags = true

[fetch]
#	prune = true
	pruneTags = true
	all = true

[status]
  submoduleSummary = false

[diff]
#	renames = copies
	renames = true
#	algorithm = patience
	algorithm = histogram
	colorMoved = plain
#	noprefix = true
	mnemonicPrefix = true

[merge]
  recursive = patience
  tool = meld
#	conflictstyle = diff3
	conflictstyle = zdiff3

[include]
  path = ~/.gitconfig.local

[includeIf "gitdir:~/work/"]
  path = ~/work/.gitconfig.work

[includeIf "gitdir:~/src/"]
  path = ~/src/.gitconfig.play

[diff "zip"]
  textconv = unzip -v

[diff "bin"]
  textconv = hexdump -v -C

[diff "pdf"]
  textconv = hexdump -v -C

[pull]
## Don't enable unless you're moving to a rebase-heavy workflow
#	rebase = true

[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true

[init]
	defaultBranch = main

[rerere]
	enabled = true

[column]
	ui = auto

[branch]
	sort = -committerdate

[commit]
	verbose = true

[tag]
	sort = version:refname

[help]
	autocorrect = prompt

[rerere]
	enabled = true
	autoupdate = true

[grep]
	patternType = perl
